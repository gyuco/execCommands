{
    "name": "exec-commands",
    "displayName": "Exec Console Commands",
    "description": "Exec bash command with a click",
    "version": "0.0.1",
    "publisher": "GiuseppeConcas",
    "private": true,
    "license": "MIT",
    "author": {"name": "Giuseppe Concas", "email": "giuseppe.concas@gmail.com"},
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/vscode-extension-samples"
    },
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "title": "Enable Exec Console Commands",
                "command": "exec-commands.enableExecCommands",
                "category": "Console Commands"
            },
            {
                "title": "Disable Exec Console Commands",
                "command": "exec-commands.disableExecCommands",
                "category": "Console Commands"
            }
        ],
        "configuration": {
            "properties": {
                "exec-commands.enableExecCommands": {
                    "type": "boolean",
                    "default": true
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "test-compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/node": "^16.11.7",
        "@types/vscode": "^1.26.0",
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@typescript-eslint/parser": "^5.30.0",
        "esbuild": "^0.14.48",
        "eslint": "^8.13.0",
        "typescript": "^4.7.2"
    }
}
